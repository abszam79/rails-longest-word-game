

<div class="container">
  <div class="row">
  <h1><center>New Game</center></h1>
    <div class="card">
      <ul>
        <% @letters.each do |letter| %>
          <li class="btn btn-primary"><%= letter %></li>
        <% end %>
      </ul>
      <form id="formulaire" action="/score" method="post">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :letters, @letters %>
        <input type="text" class="your-word" name="word">
        <input type="submit" class="btn btn-success" value="Play!">
      </form>
    </div>
  </div>
</div>


